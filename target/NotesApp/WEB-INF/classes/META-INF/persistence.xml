<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <!-- Persistence unit para MySQL (BD local)-->
    <persistence-unit name="local" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <!-- EclipseLink buscar치 las clases anotadas con @Entity -->
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <!-- Propiedades comunes a toda conexi칩n jpa -->
            <!-- Para MySQL las propiedades son -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:8889/notesApp" />
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root" />

            <!-- Propiedades particulares de eclipselink -->
            <!-- Indicamos la BBDD -->
            <property name="eclipselink.target-database" value="MySQL"/>
            <!-- Cada vez que se ejecuta la aplicaci칩n borramos todas las tablas -->
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
            <!-- Detalle de la informaci칩n que muestra EclipseLink -->
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.logging.level.sql" value="FINE"/>
            <property name="eclipselink.logging.level.cache" value="FINE"/>
            <property name="eclipselink.debug" value="ALL"/>
            <property name="eclipselink.weaving" value="static"/>
        </properties>

        <!-- Persistence Unit para PostgreSQL (BD Heroku) -->
    </persistence-unit>

    <persistence-unit name="heroku" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://ec2-54-225-199-245.compute-1.amazonaws.com:5432/d9k7l59r1nosvj" />
            <property name="javax.persistence.jdbc.user" value="khnvdvvfexedzl"/>
            <property name="javax.persistence.jdbc.password" value="vlNxunxi4aDRrzvxIGTya3HVNM" />

            <!-- Propiedades particulares de eclipselink -->
            <property name="eclipselink.target-database" value="PostgreSQL"/>
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.logging.level.sql" value="FINE"/>
            <property name="eclipselink.logging.level.cache" value="FINE"/>
            <property name="eclipselink.debug" value="ALL"/>
            <property name="eclipselink.weaving" value="static"/>
        </properties>
    </persistence-unit>

</persistence>